<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include("../partials/nav") %>
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <% for (let index = 0; index < list_group.length; index++) { %>
            <a href="" class="list-group-item list-group-item-action"
              ><%= list_group[index] %>
            </a>
            <% } %>
          </div>
        </div>
        <div class="col-md-9">
          <h1 class="h3 mb-3"><%= title %></h1>

          <% blogs.forEach(blog => { %> <% if (blog.onay) { %>
          <div class="card mb-3">
            <div class="row">
              <div class="col-md-4">
                <img
                  src="/static/images/<%= blog.img %> "
                  class="img-fluid"
                  alt=""
                />
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <p class="card-text"><%= blog.explain %></p>
                </div>
              </div>
            </div>
          </div>
          <% } %> <% }) %> <% if (blogs.length > 3) { %> <%-
          include("../partials/pagination") %> <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
